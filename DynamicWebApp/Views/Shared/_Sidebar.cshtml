<!-- Toggle button -->
<div class="row align-items-center">
    <div class="col-auto">
        <!-- Toggle button -->
        <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
            Panel
        </button>
    </div>
    <div class="col">
        <span class="ms-3">Konfigürasyon içerisinde değişiklik yapmak için 'Panel' kısmını kullanabilirsiniz.</span>
    </div>
</div>
<hr />

<!-- Sidebar -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSidebar" aria-labelledby="offcanvasSidebarLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasSidebarLabel">Sidebar</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item @(Html.IsActive("Supervisor","Home","Index"))">
                <a asp-area="Supervisor" asp-controller="Home" asp-action="Index">Anasayfa</a>
            </li>
            <li class="list-group-item">
                <a class="d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#emailSubmenu" role="button" aria-expanded="false" aria-controls="emailSubmenu">
                    Email Konfigürasyonu
                    <i class="bi bi-0-circle"></i>
                    <i class="bi bi-chevron-down"></i>
                </a>
                <div class="collapse @(Html.IsParentActive("Supervisor", "EmailConfigurations") ? "show" : "")" id="emailSubmenu">
                    <ul class="list-group list-group-flush ms-3">
                        <li class="list-group-item @(Html.IsActive("Supervisor","EmailConfigurations","Index"))">
                            <a asp-area="Supervisor" asp-controller="EmailConfigurations" asp-action="Index">Liste</a>
                        </li>
                        <li class="list-group-item @(Html.IsActive("Supervisor","EmailConfigurations","Detail"))">
                            <a asp-area="Supervisor" asp-controller="EmailConfigurations" asp-action="Detail">Detay</a>
                        </li>
                        <li class="list-group-item @(Html.IsActive("Supervisor","EmailConfigurations","Create"))">
                            <a asp-area="Supervisor" asp-controller="EmailConfigurations" asp-action="Create">Ekle</a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="list-group-item">
                <a class="d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#homeSubmenu" role="button" aria-expanded="false" aria-controls="homeSubmenu">
                    Kategoriler
                    <i class="bi bi-0-circle"></i>
                    <i class="bi bi-chevron-down"></i>
                </a>
                <div class="collapse @(Html.IsParentActive("Supervisor", "Categories") ? "show" : "")" id="homeSubmenu">
                    <ul class="list-group list-group-flush ms-3">
                        <li class="list-group-item @(Html.IsActive("Supervisor","Categories","Index"))">
                            <a asp-area="Supervisor" asp-controller="Categories" asp-action="Index">Liste</a>
                        </li>
                        <li class="list-group-item @(Html.IsActive("Supervisor","Categories","Detail"))">
                            <a asp-area="Supervisor" asp-controller="Categories" asp-action="Detail">Detay</a>
                        </li>
                        <li class="list-group-item @(Html.IsActive("Supervisor","Categories","Create"))">
                            <a asp-area="Supervisor" asp-controller="Categories" asp-action="Create">Ekle</a>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
    </div>
</div>
